<div class="container">



  <form class="form" {{action "submitMessage" on="submit"}}>

    <div class="form-group">
      <div class="row">
        <div class="col-md-4">
          <label for="namelabel">Name</label>
        </div>
        <div class="col-md-8">
          {{input value=name class="form-control" placeholder="What's your name"}}
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-4">
          <label for="messagelabel">Message</label>
        </div>
        <div class="col-md-8">
          {{textarea value=message class="form-control" placeholder="Message" rows="3"}}
        </div>
      </div>
    </div>

      <div class="row">
  <div class="col-md-6 col-md-offset-3"><button type="submit" class="btn btn-primary">Send Message</button></div>
</div>



  </form>

</div>
<div id="messages"></div>
