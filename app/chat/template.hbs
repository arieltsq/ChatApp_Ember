<h1> Ember Chat (socketIO)</h1>
<br>
<div class="container">



  <form class="form" {{action "submitMessage" on="submit"}}>

    <div class="form-group">
      <div class="row">
        <div class="col-md-4">
          <label for="namelabel">Name</label>
        </div>
        <div class="col-md-8">
          {{input value=name class="form-control" placeholder="What's your name"}}
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-4">
          <label for="messagelabel">Message</label>
        </div>
        <div class="col-md-8">
          {{textarea value=message class="form-control" placeholder="Message" rows="3"}}
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 col-md-offset-3"><button type="submit" class="btn btn-primary">Send Message</button></div>
    </div>



  </form>

</div>
<div id="firstPanel" class="panel panel-default container hide">
  <div class="panel-body">
    <div id="welcome" class="hide">
       {{welcome}}
    </div>
    <div id="details">
      {{#each detail as |d|}}
      <p> User: <strong> {{d.name}} </strong>  have joined </p>
      {{/each}}
    </div>
    <div id="connected" class="hide">
      Online Status: {{names}}
    </div>
  </div>
</div>
<div id="secondPanel" class="panel panel-default container hide">
  <div class="panel-body">
    <section class="panel-body">
      {{#each msg as |m|}}
      <div class="alert"> <li> <p><strong> Message:</strong>  {{m.message}} </p> <strong> By: </strong> {{m.name}} </li></div>
      {{/each}}
    </section>

  </div>
</div>
